    <script>
        const chatMessages = document.getElementById('chatMessages');
        const userInput = document.getElementById('userInput');
        const sendButton = document.getElementById('sendButton');
        const modelInfo = document.getElementById('modelInfo');
        const apiStatus = document.getElementById('apiStatus');
        const planStatus = document.getElementById('planStatus');
        const aiLogo = document.getElementById('aiLogo');
        const historyList = document.getElementById('historyList');
        const clearChatBtn = document.getElementById('clearChatBtn');
        const membershipModal = document.getElementById('membershipModal');
        const passwordModal = document.getElementById('passwordModal');
        const userStatus = document.getElementById('userStatus');
        const premiumBadge = document.getElementById('premiumBadge');
        const upgradeBtn = document.getElementById('upgradeBtn');
        const confirmPayment = document.getElementById('confirmPayment');
        const closeModal = document.getElementById('closeModal');
        const closePasswordModal = document.getElementById('closePasswordModal');
        const verifyProPassword = document.getElementById('verifyProPassword');
        const proPassword = document.getElementById('proPassword');
        const standardModel = document.getElementById('standardModel');
        const proModel = document.getElementById('proModel');
        const turboModel = document.getElementById('turboModel');

        // T20-CLASSIC AI Configuration (using WormGPT API)
        const T20_CONFIG = {
            apiKey: 'sk_live_4d8d295a-a419-4bec-b262-56698cf8b14237b2',
            endpoint: 'https://api.wrmgpt.com/v1/chat/completions',
            model: 'wormgpt-v6.5', // Default to free model
            temperature: 0.7,
            max_tokens: 1000
        };

        // Valid passwords for Pro access (in real app, this would be server-side)
        const VALID_PRO_PASSWORDS = [
            "T20PRO2024",
            "CLASSICPRO",
            "PREMIUMACCESS",
            "SUPPORT2024"
        ];

        // User management system
        let currentUser = {
            isPremium: false,
            planType: 'free',
            hasProAccess: false,
            subscriptionEnd: null
        };

        // Chat memory system
        let conversationHistory = [];
        let chatSessions = [];
        let currentSessionId = null;

        // Initialize application
        function initializeApp() {
            loadUserData();
            initializeChatMemory();
            updateUIForUserStatus();
        }

        // Load user data from localStorage
        function loadUserData() {
            const savedUser = localStorage.getItem('t20_user_data');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                
                // Check if subscription is still valid
                if (currentUser.isPremium && currentUser.subscriptionEnd) {
                    if (new Date() > new Date(currentUser.subscriptionEnd)) {
                        currentUser.isPremium = false;
                        currentUser.planType = 'free';
                        saveUserData();
                    }
                }
            }
        }

        // Save user data to localStorage
        function saveUserData() {
            localStorage.setItem('t20_user_data', JSON.stringify(currentUser));
        }

        // Update UI based on user status
        function updateUIForUserStatus() {
            if (currentUser.isPremium || currentUser.hasProAccess) {
                // Premium or Pro user
                userStatus.innerHTML = '<i class="fas fa-crown"></i> Premium User';
                premiumBadge.style.display = 'inline-block';
                planStatus.textContent = 'Premium';
                planStatus.style.color = '#f39c12';
                
                // Unlock premium models
                proModel.classList.remove('locked');
                turboModel.classList.remove('locked');
                proModel.querySelector('.lock-icon').style.display = 'none';
                turboModel.querySelector('.lock-icon').style.display = 'none';
                
                // Hide upgrade prompt
                document.querySelector('.upgrade-prompt').style.display = 'none';
            } else {
                // Free user
                userStatus.innerHTML = '<i class="fas fa-user"></i> Free User';
                premiumBadge.style.display = 'none';
                planStatus.textContent = 'Free';
                planStatus.style.color = '#3498db';
                
                // Lock premium models
                proModel.classList.add('locked');
                turboModel.classList.add('locked');
                proModel.querySelector('.lock-icon').style.display = 'block';
                turboModel.querySelector('.lock-icon').style.display = 'block';
                
                // Show upgrade prompt
                document.querySelector('.upgrade-prompt').style.display = 'block';
                
                // Ensure only standard model is active
                if (T20_CONFIG.model !== 'wormgpt-v6.5') {
                    switchModel('wormgpt-v6.5', 'T20-CLASSIC Standard');
                    standardModel.classList.add('active');
                    proModel.classList.remove('active');
                    turboModel.classList.remove('active');
                }
            }
        }

        // Simulate payment processing
        function processPayment(planType) {
            return new Promise((resolve) => {
                setTimeout(() => {
                    // In a real app, this would integrate with Stripe, PayPal, etc.
                    const success = Math.random() > 0.1; // 90% success rate for demo
                    
                    if (success) {
                        currentUser.isPremium = true;
                        currentUser.planType = planType;
                        
                        // Set subscription end date
                        const endDate = new Date();
                        if (planType === 'monthly') {
                            endDate.setMonth(endDate.getMonth() + 1);
                        } else {
                            endDate.setFullYear(endDate.getFullYear() + 1);
                        }
                        currentUser.subscriptionEnd = endDate.toISOString();
                        
                        saveUserData();
                        resolve(true);
                    } else {
                        resolve(false);
                    }
                }, 2000);
            });
        }

        // Verify Pro password
        function verifyPassword(password) {
            return VALID_PRO_PASSWORDS.includes(password.toUpperCase());
        }

        // Show membership modal
        function showMembershipModal() {
            membershipModal.classList.add('active');
        }

        // Show password modal for Pro access
        function showPasswordModal() {
            passwordModal.classList.add('active');
            proPassword.value = '';
            proPassword.focus();
        }

        // Hide all modals
        function hideAllModals() {
            membershipModal.classList.remove('active');
            passwordModal.classList.remove('active');
        }

        // Initialize chat memory
        function initializeChatMemory() {
            const savedSessions = localStorage.getItem('t20_chat_sessions');
            if (savedSessions) {
                chatSessions = JSON.parse(savedSessions);
                renderChatHistory();
            }
            
            if (chatSessions.length === 0) {
                createNewSession();
            } else {
                loadSession(chatSessions[chatSessions.length - 1].id);
            }
        }

        // Create a new chat session
        function createNewSession() {
            const sessionId = 'session_' + Date.now();
            const session = {
                id: sessionId,
                name: 'New Chat ' + (chatSessions.length + 1),
                timestamp: new Date().toISOString(),
                messages: []
            };
            
            chatSessions.push(session);
            currentSessionId = sessionId;
            conversationHistory = [];
            
            saveSessionsToStorage();
            renderChatHistory();
            clearChatMessages();
            
            const welcomeMessage = currentUser.isPremium || currentUser.hasProAccess
                ? "Hello! I'm your T20-CLASSIC AI assistant (Premium). How can I help you today?"
                : "Hello! I'm your T20-CLASSIC AI assistant (Standard). For Pro access, contact our support team on WhatsApp: +255 627 417 402";
            
            addMessage(welcomeMessage, false);
            
            return sessionId;
        }

        // Load a chat session
        function loadSession(sessionId) {
            const session = chatSessions.find(s => s.id === sessionId);
            if (session) {
                currentSessionId = sessionId;
                conversationHistory = [...session.messages];
                renderChatHistory();
                renderChatMessages();
            }
        }

        // Save sessions to localStorage
        function saveSessionsToStorage() {
            localStorage.setItem('t20_chat_sessions', JSON.stringify(chatSessions));
        }

        // Save current conversation to session
        function saveCurrentConversation() {
            const sessionIndex = chatSessions.findIndex(s => s.id === currentSessionId);
            if (sessionIndex !== -1) {
                chatSessions[sessionIndex].messages = [...conversationHistory];
                chatSessions[sessionIndex].timestamp = new Date().toISOString();
                
                if (conversationHistory.length > 0) {
                    const firstUserMessage = conversationHistory.find(msg => msg.role === 'user');
                    if (firstUserMessage) {
                        const shortMessage = firstUserMessage.content.substring(0, 30);
                        chatSessions[sessionIndex].name = shortMessage + (firstUserMessage.content.length > 30 ? '...' : '');
                    }
                }
                
                saveSessionsToStorage();
                renderChatHistory();
            }
        }

        // Render chat history sidebar
        function renderChatHistory() {
            historyList.innerHTML = '';
            
            chatSessions.forEach(session => {
                const historyItem = document.createElement('div');
                historyItem.classList.add('history-item');
                if (session.id === currentSessionId) {
                    historyItem.classList.add('active');
                }
                
                historyItem.innerHTML = `
                    <div>${session.name}</div>
                    <div class="date">${new Date(session.timestamp).toLocaleDateString()}</div>
                `;
                
                historyItem.addEventListener('click', () => {
                    loadSession(session.id);
                });
                
                historyList.appendChild(historyItem);
            });
        }

        // Render chat messages
        function renderChatMessages() {
            clearChatMessages();
            conversationHistory.forEach(msg => {
                addMessage(msg.content, msg.role === 'user', false, true);
            });
        }

        // Clear chat messages from UI
        function clearChatMessages() {
            chatMessages.innerHTML = '';
        }

        // Function to add a message to the chat
        function addMessage(content, isUser = false, isError = false, noAnimation = false) {
            const messageDiv = document.createElement('div');
            messageDiv.classList.add('message');
            
            if (noAnimation) {
                messageDiv.style.animation = 'none';
            }
            
            if (isError) {
                messageDiv.classList.add('bot-message', 'error-message');
                messageDiv.innerHTML = `
                    <div class="message-header">
                        <i class="fas fa-exclamation-triangle"></i>
                        T20-CLASSIC AI
                    </div>
                    ${content}
                `;
            } else {
                messageDiv.classList.add(isUser ? 'user-message' : 'bot-message');
                
                if (!isUser) {
                    const modelName = currentUser.isPremium || currentUser.hasProAccess ? 'T20-CLASSIC AI (Premium)' : 'T20-CLASSIC AI (Standard)';
                    messageDiv.innerHTML = `
                        <div class="message-header">
                            <i class="fas fa-robot"></i>
                            ${modelName}
                        </div>
                        ${content}
                    `;
                } else {
                    messageDiv.innerHTML = `
                        <div class="message-header">
                            <i class="fas fa-user"></i>
                            You
                        </div>
                        ${content}
                    `;
                }
            }
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Function to show typing indicator
        function showTypingIndicator() {
            const typingDiv = document.createElement('div');
            typingDiv.classList.add('typing-indicator');
            typingDiv.id = 'typingIndicator';
            const modelName = currentUser.isPremium || currentUser.hasProAccess ? 'T20-CLASSIC AI (Premium)' : 'T20-CLASSIC AI (Standard)';
            typingDiv.innerHTML = `
                <div class="message-header">
                    <i class="fas fa-robot"></i>
                    ${modelName}
                </div>
                <span></span><span></span><span></span>
            `;
            chatMessages.appendChild(typingDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            apiStatus.textContent = 'Thinking...';
        }

        // Function to hide typing indicator
        function hideTypingIndicator() {
            const typingIndicator = document.getElementById('typingIndicator');
            if (typingIndicator) {
                typingIndicator.remove();
            }
            apiStatus.textContent = 'Ready';
        }

        // Main function to call WormGPT API
        async function callT20API(message) {
            try {
                // Add the new user message to conversation history
                conversationHistory.push({ role: 'user', content: message });
                
                const response = await fetch(T20_CONFIG.endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${T20_CONFIG.apiKey}`
                    },
                    body: JSON.stringify({
                        model: T20_CONFIG.model,
                        messages: conversationHistory,
                        temperature: T20_CONFIG.temperature,
                        max_tokens: T20_CONFIG.max_tokens
                    })
                });

                if (!response.ok) {
                    conversationHistory.pop();
                    const errorData = await response.json();
                    throw new Error(errorData.error?.message || `HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                
                if (data.choices && data.choices[0] && data.choices[0].message) {
                    const assistantMessage = data.choices[0].message.content;
                    conversationHistory.push({ role: 'assistant', content: assistantMessage });
                    return assistantMessage;
                } else {
                    throw new Error('Unexpected response format from API');
                }

            } catch (error) {
                console.error('T20-CLASSIC API Error:', error);
                
                if (error.message.includes('401')) {
                    return 'Error: Invalid API key. Please check your API key.';
                } else if (error.message.includes('429')) {
                    return 'Error: Rate limit exceeded or insufficient tokens. Please try again later.';
                } else if (error.message.includes('network') || error.message.includes('Failed to fetch')) {
                    return 'Error: Network connection failed. Please check your internet connection.';
                } else {
                    return `Error: ${error.message}`;
                }
            }
        }

        // Function to handle sending a message
        async function sendMessage() {
            const message = userInput.value.trim();
            if (!message) return;

            if (!currentSessionId) {
                createNewSession();
            }

            addMessage(message, true);
            userInput.value = '';
            userInput.disabled = true;
            sendButton.disabled = true;

            showTypingIndicator();

            try {
                const apiResponse = await callT20API(message);
                hideTypingIndicator();
                
                if (apiResponse.startsWith('Error:')) {
                    addMessage(apiResponse, false, true);
                } else {
                    addMessage(apiResponse);
                    saveCurrentConversation();
                }

            } catch (error) {
                hideTypingIndicator();
                addMessage(`Unexpected error: ${error.message}`, false, true);
            } finally {
                userInput.disabled = false;
                sendButton.disabled = false;
                userInput.focus();
            }
        }

        // Function to switch AI models
        function switchModel(newModel, displayName) {
            // Check if user is trying to access Pro model without access
            if (newModel === 'wormgpt-v7' && !currentUser.hasProAccess && !currentUser.isPremium) {
                showPasswordModal();
                return;
            }

            // Check if user is trying to access premium models without subscription
            if ((newModel === 'wormgpt-v7' || newModel === 'wormgpt-turbo') && !currentUser.isPremium && !currentUser.hasProAccess) {
                addMessage(`üö´ The ${displayName} is only available for premium users or with Pro access. Contact support on WhatsApp: +255 627 417 402`, false);
                return;
            }

            T20_CONFIG.model = newModel;
            modelInfo.textContent = displayName;
            addMessage(`Model switched to: ${displayName}`, false);
            
            // Update active model in sidebar
            document.querySelectorAll('.model-option').forEach(option => {
                option.classList.remove('active');
            });
            event.target.closest('.model-option').classList.add('active');
        }

        // Clear all chat history
        function clearAllHistory() {
            if (confirm('Are you sure you want to clear all chat history? This action cannot be undone.')) {
                chatSessions = [];
                localStorage.removeItem('t20_chat_sessions');
                createNewSession();
            }
        }

        // Event listeners
        sendButton.addEventListener('click', sendMessage');
        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && !userInput.disabled) {
                sendMessage();
            }
        });

        // Model switching
        document.querySelectorAll('.model-option').forEach(option => {
            option.addEventListener('click', function() {
                if (this.classList.contains('locked')) {
                    const model = this.getAttribute('data-model');
                    if (model === 'wormgpt-v7') {
                        showPasswordModal();
                    } else {
                        showMembershipModal();
                    }
                    return;
                }
                const model = this.getAttribute('data-model');
                const displayName = this.querySelector('span').textContent;
                switchModel(model, displayName);
            });
        });

        // Membership and payment events
        upgradeBtn.addEventListener('click', showMembershipModal);
        closeModal.addEventListener('click', hideAllModals);
        closePasswordModal.addEventListener('click', hideAllModals);
        
        confirmPayment.addEventListener('click', async function() {
            const selectedPlan = document.querySelector('.plan-option.selected').getAttribute('data-plan');
            confirmPayment.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            confirmPayment.disabled = true;
            
            const success = await processPayment(selectedPlan);
            
            if (success) {
                addMessage('üéâ Welcome to T20-CLASSIC Premium! You now have access to all AI models with enhanced capabilities.', false);
                hideAllModals();
                updateUIForUserStatus();
            } else {
                addMessage('‚ùå Payment failed. Please try again or use a different payment method.', false, true);
            }
            
            confirmPayment.innerHTML = '<i class="fas fa-credit-card"></i> Upgrade Now';
            confirmPayment.disabled = false;
        });

        // Password verification for Pro access
        verifyProPassword.addEventListener('click', function() {
            const password = proPassword.value.trim();
            
            if (!password) {
                addMessage('‚ùå Please enter a password', false, true);
                return;
            }
            
            if (verifyPassword(password)) {
                currentUser.hasProAccess = true;
                saveUserData();
                addMessage('üéâ Pro access granted! You can now use T20-CLASSIC Pro model.', false);
                hideAllModals();
                updateUIForUserStatus();
                
                // Switch to Pro model automatically
                T20_CONFIG.model = 'wormgpt-v7';
                modelInfo.textContent = 'T20-CLASSIC Pro';
                document.querySelectorAll('.model-option').forEach(option => {
                    option.classList.remove('active');
                });
                proModel.classList.add('active');
            } else {
                addMessage('‚ùå Invalid password. Please contact support on WhatsApp: +255 627 417 402', false, true);
                proPassword.value = '';
                proPassword.focus();
            }
        });

        // Plan selection
        document.querySelectorAll('.plan-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.plan-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                this.classList.add('selected');
            });
        });

        clearChatBtn.addEventListener('click', clearAllHistory);

        // Initialize the application
        initializeApp();
        userInput.focus();

        console.log('T20-CLASSIC AI with WhatsApp Support System initialized.');
    </script>
</body>
</html>
